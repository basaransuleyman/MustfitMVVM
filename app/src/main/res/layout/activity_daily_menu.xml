<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.view.DailyMenu">

        <ImageView
            android:id="@+id/ivFoodDaily"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/circle" />


        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="21dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_delete_24" />

        <TextView
            android:id="@+id/tvFoodLabelDaily"
            android:layout_width="141dp"
            android:layout_height="34dp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/yeseva_one"
            android:gravity="center"
            android:text="Food name"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/ivFoodDaily"
            app:layout_constraintTop_toTopOf="@+id/ivFoodDaily" />

        <TextView
            android:id="@+id/tvCaloriesDaily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/yeseva_one"
            android:text="53 Cal"
            app:layout_constraintEnd_toEndOf="@+id/tvFoodLabelDaily"
            app:layout_constraintHorizontal_bias="0.367"
            app:layout_constraintStart_toStartOf="@+id/tvFoodLabelDaily"
            app:layout_constraintTop_toBottomOf="@+id/tvFoodLabelDaily" />

        <TextView
            android:id="@+id/tvCaloriesDaily2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/yeseva_one"
            android:text="kcal "
            app:layout_constraintEnd_toEndOf="@+id/tvFoodLabelDaily"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tvCaloriesDaily"
            app:layout_constraintTop_toBottomOf="@+id/tvFoodLabelDaily" />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="52dp"
            android:layout_height="41dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/yeseva_one"
            android:gravity="center"
            android:text="2"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvCaloriesDaily"
            app:layout_constraintEnd_toStartOf="@+id/ivClear"
            app:layout_constraintHorizontal_bias="0.208"
            app:layout_constraintStart_toEndOf="@+id/tvFoodLabelDaily"
            app:layout_constraintTop_toTopOf="@+id/tvFoodLabelDaily"
            app:layout_constraintVertical_bias="0.235" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
